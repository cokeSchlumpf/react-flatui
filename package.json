{
  "name": "react-flatui",
  "version": "0.0.1",
  "description": "A UI Library based on React.",
  "repository": {
    "type": "git",
    "url": "git://github.com/cokeSchlumpf/react-flatui.git"
  },
  "main": "js/app.js",
  "stability": "experimental",
  
  "dependencies": {
    "keymirror": "~0.1.0",
    "object-assign": "^1.0.0",
    "react": "^0.12.2",
    "less": "~1.5.1"
  },
  
  "devDependencies": {
    "browserify": "^8.0.2",
    "envify": "~3.0.0",
    "jest-cli": "~0.1.17",
    "reactify": "~1.0.0",
    "react-tools": "~0.12.0",
    "uglify-js": "~2.4.15",
    "watchify": "^2.1.1",
    "catw": "~0.2.0"
  },
  
  "scripts": {
    "start": "watchify -o js/bundle.js -v -d .",
    "build-css": "catw -c 'lessc -' 'less/*.less' > css/bundle.css",
    "build-js": "NODE_ENV=production browserify . | uglifyjs -cm > js/bundle.min.js",
    "build": "npm run build-css && npm run build-js",
    "test": "jest"
  },

  "author": "Michael Wellner",

  "browserify": {
    "transform": [
      [ "reactify", { "harmony": true } ],
      "envify"
    ]
  },

  "jest": {
    "rootDir": "./js"
  }
}