{
  "name": "react-flatui",
  "version": "0.0.1",
  "description": "A UI Library based on React.",
  "repository": {
    "type": "git",
    "url": "git://github.com/cokeSchlumpf/react-flatui.git"
  },
  "main": "js/app.js",
  "stability": "experimental",
  
  "dependencies": {
    "classnames": "1.2.0",
    "keymirror": "~0.1.0",
    "object-assign": "^2.0.0",
    "react": "^0.12.0",
    "less": "~2.4.0",
    "react-bootstrap": "0.17.0",
    "jquery": "1.11.2"
  },
  
  "devDependencies": {
    "browserify": "~9.0.3",
    "envify": "~3.2.0",
    "jest-cli": "~0.4.0",
    "reactify": "~1.0.0",
    "react-tools": "~0.12.0",
    "uglify-js": "~2.4.15",
    "watchify": "^2.1.1",
    "catw": "~0.2.0"
  },
  
  "scripts": {
    "build-js": "browserify . | uglifyjs -mc > js/bundle.js",
    "build-css": "catw -c 'lessc -' 'less/example.less' > css/bundle.css",
    "watch-js": "watchify -o js/bundle.js -v -d .",
    "watch-css": "catw -c 'lessc less/example.less' 'less/*.less' 'less/components/*.less' -o css/bundle.css -v",
    "watch": "npm run watch-js & npm run watch-css",
    
    "start": "watchify -o js/bundle.js -v -d .",
    "build": "npm run build-css && npm run build-js",
    "test": "jest"
  },

  "author": "Michael Wellner",

  "browserify": {
    "transform": [
      [ "reactify", { "harmony": true } ],
      "envify"
    ]
  },

  "jest": {
    "rootDir": "./js"
  }
}