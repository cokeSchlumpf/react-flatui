{
  "name": "todomvc-flux",
  "version": "0.0.3",
  "description": "Example Flux architecture.",
  "repository": "https://github.com/facebook/flux",
  "main": "js/app.js",
  
  "dependencies": {
    "flux": "^2.0.1",
    "keymirror": "~0.1.0",
    "object-assign": "^1.0.0",
    "react": "^0.12.0",
    "less": "~1.5.1"
  },
  
  "devDependencies": {
    "browserify": "^6.2.0",
    "envify": "^3.0.0",
    "jest-cli": "~0.1.17",
    "reactify": "^0.15.2",
    "uglify-js": "~2.4.15",
    "watchify": "^2.1.1",
    "catw": "~0.2.0"
  },
  
  "scripts": {
    "start": "watchify -o js/bundle.js -v -d .",
    "build-css": "catw -c 'lessc -' 'less/*.less' > css/bundle.css",
    "build-js": "NODE_ENV=production browserify . | uglifyjs -cm > js/bundle.min.js",
    "build": "npm run build-css && npm run build-js",
    "test": "jest"
  },

  "author": "Michael Wellner",

  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },

  "jest": {
    "rootDir": "./js"
  }
}